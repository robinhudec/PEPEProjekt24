<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.mrdkapropepeho.HelloController">
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
                <MenuItem mnemonicParsing="false" onAction="#handleOpenButton" text="Open" />
                <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Filters">
            <items>
              <MenuItem mnemonicParsing="false" text="Filter1" />
                  <MenuItem mnemonicParsing="false" text="Filter2" />
                  <MenuItem mnemonicParsing="false" text="Filter3" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" onAction="#handleAbout" text="About">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" onMenuValidation="#handleQuit" text="Exit">
              <items>
                <MenuItem mnemonicParsing="false" text="Action 1" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <center>
      <VBox prefHeight="575.0" prefWidth="257.0" BorderPane.alignment="CENTER">
         <children>
            <ImageView id="imageView" fx:id="imageView" fitHeight="500" fitWidth="500" pickOnBounds="true" preserveRatio="true" VBox.vgrow="ALWAYS" />
         </children></VBox>
   </center>
   <right>
      <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="575.0" prefWidth="147.0" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#handleOpenButton" text="Select Image File" />
            <Button mnemonicParsing="false" onAction="#handleEditMatrix" text="Edit Matrix" />
            <GridPane>
              <columnConstraints>
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <VBox.margin>
                  <Insets bottom="1.0" left="1.0" right="1.0" top="1.0" />
               </VBox.margin>
               <children>
                  <TextField />
                  <TextField fx:id="cell00" GridPane.columnIndex="1" />
                  <TextField GridPane.columnIndex="2" />
                  <TextField GridPane.rowIndex="1" />
                  <TextField GridPane.columnIndex="1" GridPane.rowIndex="1" />
                  <TextField GridPane.columnIndex="2" GridPane.rowIndex="1" />
                  <TextField GridPane.rowIndex="2" />
                  <TextField GridPane.columnIndex="1" GridPane.rowIndex="2" />
                  <TextField GridPane.columnIndex="2" GridPane.rowIndex="2" />
               </children>
            </GridPane>
             <TextField fx:id="textField" prefHeight="173.0" prefWidth="147.0" />
             <Button mnemonicParsing="false" onAction="#handleGenerateButton" prefHeight="19.0" prefWidth="101.0" text="Generate image" />
             <Button mnemonicParsing="false" onAction="#handleRestoreButton" text="Restore image" disable="true" fx:id="restoreButton"/>
            <RadioButton mnemonicParsing="false" text="Original" textAlignment="JUSTIFY">
               <toggleGroup>
                  <ToggleGroup fx:id="tgImageState" />
               </toggleGroup>
            </RadioButton>
            <RadioButton mnemonicParsing="false" selected="true" text="Modified" toggleGroup="$tgImageState" />
         </children>
         <padding>
            <Insets top="10.0" />
         </padding>
      </VBox>
   </right>
</BorderPane>
